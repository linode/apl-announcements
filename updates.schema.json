{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "updates": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "version": {
            "type": "string",
            "pattern": "^v\\d+\\.\\d+\\.\\d+$"
          },
          "supported_k8s_versions": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^\\d+\\.\\d+$"
            }
          },
          "message": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9 .,:_()-\"]{1,250}$",
            "maxLength": 250
          }
        },
        "required": ["version", "supported_k8s_versions", "message"],
        "additionalProperties": false
      }
    }
  },
  "required": ["updates"],
  "additionalProperties": false
}
